<MyGrid>:

    user_name: user_name
    password: password

    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2

            Label:
                text: "User Name: "

            TextInput:
                id: user_name
                multinline: False

            Label:
                text: "password: "

            TextInput:
                id: password
                multiline: False

        Button:
            text:"Log in"
            on_press: root.log_in()

        Button:
            text:"sign up"
